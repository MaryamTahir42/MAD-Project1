<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/greetingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/darkblue"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Maryam"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        <!-- Current City Text -->
        <TextView
                android:id="@+id/currentCityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current City: Lahore >"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

        <!-- Search Bar with Icon -->
        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search for Medicines"
                android:drawableStart="@drawable/baseline_search_24"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColorHint="@color/darkblue"
                android:background="@color/white"
                android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Refer & Earn Section -->
    <LinearLayout
            android:id="@+id/referEarnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/greetingLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/referEarnIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img" />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp">

            <TextView
                    android:id="@+id/referEarnText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refer and Earn"
                    android:textSize="16sp"
                    android:textColor="@color/orange" />

            <TextView
                    android:id="@+id/referEarnSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earn Rs. 1000 by referring 5 friends!"
                    android:textSize="14sp"
                    android:textColor="@color/gray" />


        </LinearLayout>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:layout_gravity="center" />
    </LinearLayout>

    <!-- Cards Section -->
    <androidx.cardview.widget.CardView
            android:id="@+id/orderMedicinesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/referEarnLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20dp">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                <TextView
                        android:id="@+id/orderMedicinesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Medicines"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                <TextView
                        android:id="@+id/orderMedicinesSubText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get them delivered to your doorstep at upto 10% OFF!"
                        android:textSize="14sp"
                        android:textColor="@color/gray" />
            </LinearLayout>


            <ImageView
                    android:id="@+id/orderMedicinesIcon"
                    android:layout_width="120dp"
                    android:layout_height="128dp"
                    android:src="@drawable/img_3" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/forward_arrow"
                    android:layout_gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

   <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/orderMedicinesCard"
           android:orientation="horizontal"
           android:layout_margin="8dp"

           >
           <androidx.cardview.widget.CardView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_margin="8dp"
                   android:layout_weight="1"
                   android:backgroundTint="@color/white"
                   app:cardCornerRadius="8dp"
                   app:cardElevation="4dp">

                   <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"

                           android:padding="16dp">

                           <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:orientation="vertical"
                                   android:background="@color/pink"
                                   android:layout_weight="1">
                                   <TextView
                                           android:id="@+id/findDoctorsText2"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text=" Find Doctors"
                                           android:textSize="16sp"
                                           android:textStyle="bold"
                                           android:textColor="@color/darkblue" />

                                   <TextView
                                           android:id="@+id/findDoctorsSubText2"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text=" Book appointments\n with ease"
                                           android:textSize="14sp"
                                           android:textColor="@color/darkblue" />

                               <ImageView
                                       android:id="@+id/findDoctorsIcon2"
                                       android:layout_marginLeft="40dp"
                                       android:layout_width="104dp"
                                       android:layout_height="104dp"
                                       android:src="@drawable/img_2" /> <!-- Replace with actual image -->

                           </LinearLayout>

                           <androidx.cardview.widget.CardView
                                   android:layout_width="0dp"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="8dp"
                                   android:layout_weight="1"
                                   android:background="@color/light_blue"
                                   app:cardCornerRadius="8dp"
                                   app:cardElevation="4dp">

                               <LinearLayout
                                       android:layout_width="167dp"
                                       android:layout_height="153dp"
                                       android:orientation="vertical"
                                       android:background="@color/light_blue"
                                       android:padding="16dp">

                                   <TextView
                                           android:id="@+id/onlineDoctorText"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="Online Doctor"
                                           android:textSize="16sp"
                                           android:textStyle="bold"
                                           android:textColor="@color/darkblue" />

                                   <TextView
                                           android:id="@+id/onlineDoctorSubText"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="Get instant consultation via video and live chat"
                                           android:textSize="14sp"
                                           android:textColor="@color/darkblue"
                                           android:layout_marginTop="4dp" />

                                   <ImageView
                                           android:id="@+id/onlineDoctorIcon"
                                           android:layout_width="43dp"
                                           android:layout_height="46dp"
                                           android:src="@drawable/img_4" />
                               </LinearLayout>

                           </androidx.cardview.widget.CardView>

                   </LinearLayout>

           </androidx.cardview.widget.CardView>
   </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
